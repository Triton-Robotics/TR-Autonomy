[Unit]
Description=record relevant rosbags for comp matches
After=network-online.target

[Service]
User=triton
WorkingDirectory=/home/triton/Documents/cv-dev/TR-Autonomy-2024-2025/
ExecStart= \
  /bin/bash -lc \
  'source /opt/ros/humble/setup.bash && \
